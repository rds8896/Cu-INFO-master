<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="CustomTextAppearance" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Dosis-Medium.ttf</item>
    </style>
    <!--Custom bold text appearance-->
    <style name="CustomTextAppearance.Bold" parent="CustomTextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Dosis-Bold.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--Custom light text appearance-->
    <style name="CustomTextAppearance.Light" parent="CustomTextAppearance">
        <item name="fontPath">fonts/Dosis-Light.ttf</item>
    </style>

    <style name="primary_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_selector_primary_color</item>
        <item name="android:textAppearance">@style/CustomTextAppearance</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_xlarge</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="text_view">
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/fake_black</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fake_black</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:drawablePadding">@dimen/padding_normal</item>
    </style>

    <style name="met_otp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/sky_blue</item>
        <item name="android:layout_margin">@dimen/margin_large</item>
        <item name="android:inputType">number</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rectangle_edit_text</item>
    </style>


    <!-- any Layout whose width height match parent -->
    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="wrap">
        <item name="android:layout_width">@dimen/iv_car_image</item>
        <item name="android:layout_height">@dimen/iv_car_image</item>
    </style>


    <style name="text_view_drawer">
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_xxlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
    </style>


    <style name="edit_text_car_details">
        <item name="android:background">@drawable/rectangle_edit_text</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_drop_down_24dp</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:paddingStart">@dimen/padding_normal</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Navigation Drawer Item-->
    <style name="instruction">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="toolbar_icon" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="NavMenuItem">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_height">@dimen/nav_menu_height</item>
        <item name="android:textSize">@dimen/nav_menu_text_size</item>
    </style>

    <style name="menu_selection_bar">
        <item name="android:layout_width">@dimen/nav_menu_bar_length</item>
        <item name="android:layout_height">@dimen/nav_menu_bar_height</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="nav_text">
        <item name="android:textSize">@dimen/nav_menu_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginStart">@dimen/nav_item_margin_start</item>
    </style>
    <!-- TAB Styles -->
    <style name="tab_text_style" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sky_blue</item>
    </style>
    <!-- Frame Styles -->
    <style name="home_view_back">
        <!--<item name="android:padding">5dp</item>-->
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:background">@drawable/background_white_circular</item>
    </style>
    <!--Dialogs styles -->
    <style name="booking_dialog_text">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="drawer_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_xlarge</item>
        <item name="android:textColor">@color/black_new</item>
        <item name="android:padding">@dimen/padding_normal</item>
    </style>

    <style name="drawer_text_view">
        <item name="android:drawablePadding">@dimen/padding_large</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:paddingStart">@dimen/margin_xxlarge</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/button_selector_primary_color</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>
</resources>
